@model VroomAppTwo.Models.ViewModels.ModelViewModel;
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<hr />
<h2 class="text-info mt-5">Add Model of Vehicle</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Makes" class="control-label"></label>
                </div>
                <div class="col-8">
                    @*<select asp-for="Model.MakeID" asp-items="Model.Makes" class="form-control">
                    </select>*@

                    <select asp-for="Model.MakeID" asp-items="Model.CSelectListItem(Model.Makes)" class="form-control"></select>
                </div>
                <div class="col-4">
                    <label asp-for="Model.Name" class="control-label"></label>
                </div>
                <div class="col-8 mt-2">
                    <input asp-for="Model.Name" class="form-control" />
                    <span asp-validation-for="Model.Name" class="text-danger"></span>
                </div>

            </div>
            <br/>
            <div class="form-group">
                <div class="row">
                    <div class="col-2"></div>
                    <div class="col-5">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                    <div class="col-5">
                        <a asp-action="Index" class="btn btn-success">Back</a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div> 